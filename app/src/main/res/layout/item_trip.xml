<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/trip_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/bus_or_driver_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/user" />

    <ImageView
        android:id="@+id/call"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_toEndOf="@id/text_linear"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/text_linear"
        android:src="@drawable/ic_call_black_24dp"
        android:tint="@color/colorPrimaryDark"
        android:layout_marginLeft="@dimen/_minus27sdp"/>

    <LinearLayout
        android:id="@+id/text_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/bus_or_driver_image"
        android:layout_toRightOf="@id/bus_or_driver_image"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:padding="5dp">

        <TextView
            android:id="@+id/area"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:text="Destination"
            android:textColor="#000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/assembly_point"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:text="Assembly Point "
            android:textColor="@color/textcolor"
            android:textSize="20sp" />


        <TextView
            android:id="@+id/trip_day"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:text="Trip Day "
            android:textColor="@color/textcolor"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/trip_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:text="Trip Time "
            android:textColor="@color/textcolor"
            android:textSize="20sp" />


    </LinearLayout>

</RelativeLayout>