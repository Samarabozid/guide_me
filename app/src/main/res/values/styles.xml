<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/font</item>
    </style>

    <style name="spinner_style" parent="Widget.AppCompat.DropDownItem.Spinner">
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:layout_marginStart" tools:targetApi="jelly_bean_mr1">20dp</item>
        <item name="android:layout_marginEnd" tools:targetApi="jelly_bean_mr1">20dp</item>
    </style>

    <style name="text1" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="edittxtStyle">
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:textColor">@color/textcolor</item>
        <item name="android:padding">15dp</item>
        <item name="android:layout_marginStart" tools:targetApi="jelly_bean_mr1">20dp</item>
        <item name="android:layout_marginEnd" tools:targetApi="jelly_bean_mr1">20dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:titleMarginBottom" tools:targetApi="n">50dp</item>
        <item name="android:textColorHint">@color/colorAccent</item>
    </style>

    <style name="txtStyle">
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_marginStart" tools:targetApi="jelly_bean_mr1">20dp</item>
        <item name="android:layout_marginEnd" tools:targetApi="jelly_bean_mr1">20dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textColorHint">@color/colorAccent</item>
    </style>

    <style name="TextAppearance.Subhead.Bold" parent="@style/TextAppearance.AppCompat.Subhead">
        <item name="android:textStyle">bold</item>
        <item name="tabIndicatorColor">?attr/colorAccent</item>
    </style>

    <style name="RippleStyleGrey">
        <item name="mrl_rippleOverlay">true</item>
        <item name="mrl_rippleColor">#805F5F5F</item>
        <item name="mrl_rippleHover">true</item>
        <item name="mrl_rippleAlpha">0.2</item>
    </style>

    <style name="RippleStyleRed">
        <item name="mrl_rippleOverlay">true</item>
        <item name="mrl_rippleColor">@color/colorAccent</item>
        <item name="mrl_rippleHover">true</item>
        <item name="mrl_rippleAlpha">0.2</item>
    </style>

    <style name="RippleStyleWhite">
        <item name="mrl_rippleOverlay">true</item>
        <item name="mrl_rippleColor">#80FFFFFF</item>
        <item name="mrl_rippleHover">true</item>
        <item name="mrl_rippleAlpha">0.2</item>
    </style>

</resources>
